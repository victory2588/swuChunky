<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wizard_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dobi_name"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김예원"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 청소요정"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="8dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="208dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                 <TextView
                    android:id="@+id/clean_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="청소 분야 : "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/clean_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빈 텍스트"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/clean_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="청소 날짜 : "
                    android:textStyle="bold"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/clean_info1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빈 텍스트"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/clean_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요청사항 : "
                    android:textStyle="bold"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/clean_info2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빈 텍스트"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/clean_info3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="위치 : "
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/clean_info3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빈 텍스트"
                    android:textSize="11dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/test_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:backgroundTint="#d8d8d8"
                android:textColor="@color/white"
                android:text="평가하기" /> <!--시간날짜 지나면 파랑색으로 변경!-->

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff8da4"
                android:textColor="@color/white"
                android:text="취소하기" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#d8d8d8" />

</LinearLayout>