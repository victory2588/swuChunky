<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/wizard_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/reservation3_living_add"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:background="@drawable/corners"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/living" />

                <TextView
                    android:id="@+id/living_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="생활청소"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/reservation3_move_add"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/corners"
                    app:srcCompat="@drawable/move" />

                <TextView
                    android:id="@+id/move_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="이사청소"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/reservation3_sofa_add"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:background="@drawable/corners"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/sofa" />
                <TextView
                    android:id="@+id/sofa_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="가구.가전청소"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/reservation3_animal_add"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/corners"
                    app:srcCompat="@drawable/animal" />
                <TextView
                    android:id="@+id/animal_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="반려동물"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/reservation3_special_add"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/corners"
                    app:srcCompat="@drawable/special" />
                <TextView
                    android:id="@+id/special_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="특수청소"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/reservation3_company_add"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/corners"
                    app:srcCompat="@drawable/company" />
                <TextView
                    android:id="@+id/company_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="사무실청소"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/reservation3_trash_add"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/corners"
                    app:srcCompat="@drawable/trash" />
                <TextView
                    android:id="@+id/trash_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="분리수거"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/reservation3_toilet_add"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/corners"
                    app:srcCompat="@drawable/toilet" />
                <TextView
                    android:id="@+id/toilet_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="화장실 청소"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/wizardname_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:hint="마법사 이름"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/dobiname_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:hint="청소요정 이름"
                android:inputType="textPersonName" />
        </LinearLayout>

        <EditText
            android:id="@+id/category_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:hint="청소 분야"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/time_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="15"
            android:textSize="14dp"
            android:hint="청소 날짜"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/where_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="15"
            android:textSize="14dp"
            android:hint="청소 위치"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/rqst_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="15"
            android:textSize="14dp"
            android:hint="요청사항"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/wizard_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF03A9F4"
        android:textColor="@color/white"
        android:text="일정 등록하기" />

</LinearLayout>