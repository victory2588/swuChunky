<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/membership_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="회원가입"
        android:textColor="#0B0B0B"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/membership_txtexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="마법사가 되시겠습니까?"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/membership_name_txt"
        android:layout_width="271dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="  이름"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/membership_email_txt"
        android:layout_width="271dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="  이메일"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_gravity="center" />
    <EditText
        android:id="@+id/membership_pw_txt"
        android:layout_width="271dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="  비밀번호"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_gravity="center" />


    <EditText
        android:id="@+id/mebership_pwconfirm_txt"
        android:layout_width="271dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="  비밀번호 확인"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_gravity="center" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="119dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="소설 계정 연동하기"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_kakao"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/kakao" />
        <ImageView
            android:id="@+id/img_instagram"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/naver" />
        <ImageView
            android:id="@+id/img_naver"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/facebook" />
        <ImageView
            android:id="@+id/img_google"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/google" />
    </LinearLayout>


    <Button
        android:id="@+id/wizard_membership_btn"
        android:layout_width="140.7dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="#00b8ff"
        android:text="회원가입 완료"
        android:layout_gravity="center" />
</LinearLayout>