<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reservation1_info2"
        android:layout_width="278dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="*예약 후 변경사항은 마이페이지에서 수정해주세요"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservation1_next_btn" />

    <TextView
        android:id="@+id/reservation1_reg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="청소요정 소환하기"
        android:textColor="#0B0B0B"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reservation1_requestbtn"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#b8b8b8"
        android:text="요청사항"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/reservation1_next_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservation1_timePicker" />

    <Button
        android:id="@+id/reservation1_next_btn"
        android:layout_width="117dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#00b8ff"
        android:text="다음"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservation1_request_txt" />

    <Button
        android:id="@+id/reservation1_datebtn"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#ff8da4"
        android:text="날짜 선택"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservation1_reg_txtexp2" />

    <TextView
        android:id="@+id/reservation1_reg_txtexp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="청소요정이 방문할 날짜를 선택해주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservation1_reg_txt" />

    <Button
        android:id="@+id/reservation1_timebtn"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:backgroundTint="#b8b8b8"
        android:text="시간 선택"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="252dp" />

    <TimePicker
        android:id="@+id/reservation1_timePicker"
        android:layout_width="233dp"
        android:layout_height="171dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reservation1_timebtn" />

    <EditText
        android:id="@+id/reservation1_request_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toEndOf="@+id/reservation1_requestbtn"
        tools:layout_editor_absoluteY="439dp" />

</androidx.constraintlayout.widget.ConstraintLayout>